@model BankingSoftwareSystem.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <base href="/">
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    @Styles.Render("~/Content/app")
    <style>
        @@font-face {
            font-family: "dropways";
            src: url('../../fonts/dropways.ttf');
        }
    </style>
</head>
<body class="login-page">
    <div class="register-page-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-lg-12">
                    <div id="errorNotificationPanel" class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                        <span id="errorMessage"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div id="successNotificationPanel" class="alert alert-success alert-dismissible fade show text-center" role="alert">
                        <span id="successMessage"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <button type="button" id="registration-success" hidden></button>

                    <div class="register-box bg-white box-shadow border-radius-10">
                        <p style="color:maroon"
                           class="fw-light">
                            @Html.ValidationSummary(false, null, new { @class = "text-danger" })
                        </p>

                        <div class="login-title">
                            <h4 class="text-center text-primary" style="padding-top:3vw">Register</h4>
                        </div>
                        <div class="wizard-content">
                            <form class="tab-wizard2 wizard-circle wizard registrationForm" id="registerForm" method="post" action="">
                                <h5>Basic Account Credentials</h5>
                                <section>
                                    <div class="form-wrap max-width-600 mx-auto">
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label">Account Number *</label>
                                            <div class="col-12">
                                                <input id="registrationPageAccountNumber"
                                                       autocomplete="off"
                                                       name="AccountNumber"
                                                       class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label">PIN *</label>
                                            <div class="col-12">
                                                <input type="password" name="PIN" id="registrationPageAccountPIN" autocomplete="off" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label">Confirm PIN *</label>
                                            <div class="col-12">
                                                <input type="password" name="ConfirmPIN" id="registrationPageAccountConfirmPIN" autocomplete="off" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label">First Name *</label>
                                            <div class="col-12">
                                                <input id="registrationPageAccountFirstName" name="FirstName" autocomplete="off" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label">Last Name *</label>
                                            <div class="col-12">
                                                <input id="registrationPageAccountLastName" name="LastName" autocomplete="off" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </section>
                                <!-- Step 2 -->
                                <h5>User Authentication</h5>
                                <section>
                                    <div class="form-wrap max-width-600 mx-auto">
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label">Username*</label>
                                            <div class="col-12">
                                                <input type="text" id="registrationPageUsername" name="Username" autocomplete="off" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-12 col-form-label">Password*</label>
                                            <div class="col-12">
                                                <input type="password" id="registrationPagePassword" name="Password" autocomplete="off" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/app")

    <script>sessionStorage.clear();

        document.getElementById('successNotificationPanel').style.display = 'none';
        document.getElementById('errorNotificationPanel').style.display = 'none';</script>

</body>

</html>

